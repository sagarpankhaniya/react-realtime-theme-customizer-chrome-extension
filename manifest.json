{
    "manifest_version": 3,
    "name": "Real-time Theme Customizer",
    "version": "1.0",
    "description": "Customize website themes in real-time.",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": ["content.js"]
      }
    ]
  }